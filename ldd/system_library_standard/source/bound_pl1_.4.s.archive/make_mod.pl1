/* this program returns the smallest number j such that
	j >= n
    and	j = 0 mod m

   Initial Version:  3 April, 1969 by BLW	*/

make_mod: proc(n,m) returns(fixed bin);

dcl	(n,j,k,m) fixed bin;

	j = n;
	k = mod(j,m);
	if k ^= 0 then j = j + m - k;
	return(j);

	end;
