dcl	1 descriptor(0:k)	based aligned,
	2 bit_type	unaligned,
	  3 flag		bit(1) unaligned,
	  3 type		bit(6) unaligned,
	  3 packed	bit(1) unaligned,
	  3 number_dims	bit(4) unaligned,
	2 size		bit(24) unaligned;

